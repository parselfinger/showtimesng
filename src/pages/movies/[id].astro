---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ShowtimesWithDatePicker from '../../components/ShowtimesWithDatePicker.astro';
import StructuredData from '../../components/StructuredData.astro';
import { getMovieById, getShowtimesForMovie, getAllMovieIds } from '../../lib/queries';
import { formatDuration, formatRating, slugify } from '../../lib/utils';

export async function getStaticPaths() {
  const movies = await getAllMovieIds();
  return movies.map((movie) => ({
    params: { id: `${movie.id}-${slugify(movie.title)}` },
  }));
}

const { id } = Astro.params;
const movieId = parseInt(id.split('-')[0]);
const movie = await getMovieById(movieId);
const showtimes = await getShowtimesForMovie(movie.id);
---

<BaseLayout
  title={movie.title}
  description={`See ${movie.title} showtimes at cinemas across Lagos. Book tickets now.`}
  image={movie.poster_url || undefined}
>
  <StructuredData type="movie" data={movie} />

  <article>
    <div class="flex flex-col md:flex-row gap-8">
      <!-- Poster -->
      <div class="w-full md:w-1/3 lg:w-1/4">
        {movie.poster_url ? (
          <img
            src={movie.poster_url}
            alt={movie.title}
            class="w-full rounded-lg shadow-lg"
          />
        ) : (
          <div class="w-full aspect-[2/3] bg-secondary rounded-lg flex items-center justify-center">
            <span class="text-6xl">ðŸŽ¬</span>
          </div>
        )}
      </div>

      <!-- Details -->
      <div class="flex-1">
        <h1 class="text-3xl font-bold">{movie.title}</h1>

        <div class="mt-4 flex flex-col gap-2 text-sm [text-shadow:none]">
          {movie.release_year && (
            <div>Year: {movie.release_year}</div>
          )}
          {movie.duration_minutes && (
            <div>Duration: {formatDuration(movie.duration_minutes)}</div>
          )}
          {(movie.rating != null || movie.metacritic_rating != null || movie.rotten_tomatoes_rating != null) && (
            <div class="flex flex-wrap items-center gap-3">
              <span class="text-gray-400">Ratings:</span>
              {movie.rating != null && (
                <span class="inline-flex items-center gap-2" title="IMDb">
                  <img src="/icons/imdb.svg" alt="IMDb" class="h-5 w-5 flex-shrink-0 object-contain" width="20" height="20" loading="lazy" />
                  {formatRating(movie.rating)}
                </span>
              )}
              {movie.metacritic_rating != null && (
                <span class="inline-flex items-center gap-2" title="Metacritic">
                  <img src="/icons/metacritic.svg" alt="Metacritic" class="h-5 w-5 object-contain" width="20" height="20" />
                  {movie.metacritic_rating}
                </span>
              )}
              {movie.rotten_tomatoes_rating != null && (
                <span class="inline-flex items-center gap-2" title="Rotten Tomatoes">
                  <img src="/icons/rotten-tomatoes.svg" alt="Rotten Tomatoes" class="h-5 w-5 object-contain" width="20" height="20" />
                  {movie.rotten_tomatoes_rating}%
                </span>
              )}
            </div>
          )}
        </div>

        {movie.description && (
          <p class="mt-6 text-gray-300 leading-relaxed">
            {movie.description}
          </p>
        )}
      </div>
    </div>

    <!-- Showtimes -->
    <section class="mt-12">
      <h2 class="text-2xl font-bold mb-6">Showtimes</h2>

      {showtimes && showtimes.length > 0 ? (
        <ShowtimesWithDatePicker showtimes={showtimes} showCinema={true} />
      ) : (
        <p class="text-gray-400">No showtimes available at the moment.</p>
      )}
    </section>
  </article>
</BaseLayout>
