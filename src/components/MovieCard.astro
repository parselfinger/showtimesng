---
import type { Movie } from '../lib/queries';
import { slugify, formatDuration, formatRating } from '../lib/utils';

interface Props {
  movie: Movie;
  href?: string;
}

const { movie, href } = Astro.props;
const link = href || `/movies/${movie.id}-${slugify(movie.title)}`;
---

<a href={link} class="group block">
  <article class="bg-secondary rounded-lg overflow-hidden transition-transform group-hover:scale-105">
    <div class="aspect-[2/3] relative bg-gray-800">
      {movie.poster_url ? (
        <img
          src={movie.poster_url}
          alt={movie.title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-gray-500">
          <span class="text-4xl">ðŸŽ¬</span>
        </div>
      )}
    </div>
    <div class="p-4">
      <h3 class="font-semibold text-lg truncate group-hover:text-accent transition-colors">
        {movie.title}
      </h3>
      <div class="mt-2 flex flex-wrap items-center gap-2 text-sm text-gray-400 [text-shadow:none]">
        {movie.duration_minutes && <span>{formatDuration(movie.duration_minutes)}</span>}
        {movie.rating != null && (
          <span class="inline-flex items-center gap-1 [text-shadow:none]" title="IMDb">
            <img src="/icons/imdb.svg" alt="IMDb" class="h-4 w-4 flex-shrink-0 object-contain" width="16" height="16" loading="lazy" />
            {formatRating(movie.rating)}
          </span>
        )}
        {movie.metacritic_rating != null && (
          <span class="inline-flex items-center gap-1 [text-shadow:none]" title="Metacritic">
            <img src="/icons/metacritic.svg" alt="Metacritic" class="h-4 w-4 object-contain" width="16" height="16" />
            {movie.metacritic_rating}
          </span>
        )}
        {movie.rotten_tomatoes_rating != null && (
          <span class="inline-flex items-center gap-1 [text-shadow:none]" title="Rotten Tomatoes">
            <img src="/icons/rotten-tomatoes.svg" alt="Rotten Tomatoes" class="h-4 w-4 object-contain" width="16" height="16" />
            {movie.rotten_tomatoes_rating}%
          </span>
        )}
      </div>
    </div>
  </article>
</a>
